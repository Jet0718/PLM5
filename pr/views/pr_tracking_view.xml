<?xml version="1.0"?>
<odoo>

    <record id="pr_tracking_action" model="ir.actions.act_window">
        <field name="name">PR 追蹤紀錄</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pr.tracking</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="pr_tracking_view_list" model="ir.ui.view">
        <field name="name">pr.tracking.list</field>
        <field name="model">pr.tracking</field>
        <field name="arch" type="xml">
            <list string="PR 追蹤紀錄">
                <field name="lc_po_no"  string="批號" optional="show"/>
                <field name="lc_verify"  string="確認結果" optional="show"/>
                <field name="date_on"  string="時間" widget="show"/>
                <field name="pr_id"  string="PR問題單" optional="show"/>
            </list>
        </field>
    </record> 
    <record id="pr_tracking_view_form" model="ir.ui.view">
        <field name="name">pr.tracking.form</field>
        <field name="model">pr.tracking</field>
        <field name="arch" type="xml">
            <form string="PR 追蹤紀錄">
                <sheet>    
                    <group>
                        <group>
                            <field name="lc_po_no"  string="批號"/>
                            <field name="lc_verify"  string="確認結果"/>
                            <field name="date_on"  string="時間"/>
                            <field name="pr_id"  string="PR問題單"/>
                        </group>                  
                    </group>
                </sheet>
                <chatter reload_on_post="True"/>
            </form>
        </field>
    </record>
</odoo>
