<odoo>
  <record id="competitor_record_model_action" model="ir.actions.act_window">
    <field name="name">競爭記錄</field>
    <field name="res_model">competitor.record</field>
    <field name="view_mode">list,form</field>
  </record>
  <!-- 列表視圖：顯示關鍵字段，支持排序和篩選 -->
  <record id="competitor_record_list" model="ir.ui.view">
    <field name="name">competitor.record.list</field>
    <field name="model">competitor.record</field>
    <field name="arch" type="xml">
      <list string="競爭記錄" editable="bottom">
        <field name="competitor_name"/>
        <field name="competitor_desc"/>
        <field name="reference_file"/>
      </list>
    </field>
  </record>
</odoo>