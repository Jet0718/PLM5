<odoo>
  <record id="custom_demand_model_action" model="ir.actions.act_window">
    <field name="name">客戶需求</field>
    <field name="res_model">custom.demand</field>
    <field name="view_mode">list,form</field>
  </record>
  <!-- 列表視圖：顯示關鍵字段，支持排序和篩選 -->
  <record id="custom_demand_list" model="ir.ui.view">
    <field name="name">custom_demand.list</field>
    <field name="model">custom.demand</field>
    <field name="arch" type="xml">
      <list string="客戶需求" editable="bottom">
        <field name="upload_time"/>
        <field name="file_name"/>
        <field name="file_info"/>
        <field name="change_record"/>
        <field name="file" filename="file_name"/>
        <field name="attach_file_name" />
        <field name="attach_file" filename="attach_file_name"/>
      </list>
    </field>
  </record>
</odoo>