<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="rfq_property_sequence" model="ir.sequence">
      <field name="name">RFQ序列</field>
      <!-- 唯一標識符，用于代碼中調用 -->
      <field name="code">rfq_property_sequence</field>
      <!-- 前綴固定爲 -->
      <field name="prefix">RFQ-</field>
      <!-- 序列號位數（6位，即000001） -->
      <field name="padding">6</field>
      <field name="company_id" eval="False" /> <!-- 跨公司通用 -->
      <!-- standard允許斷號，no_gap確保連續（性能開銷較大） -->
      <field name="implementation">standard</field> <!-- 允許斷號 -->
    </record>
    <record id="rfq_flow_sequence" model="ir.sequence">
      <field name="name">RFQ簽審單序列</field>
      <!-- 唯一標識符，用于代碼中調用 -->
      <field name="code">rfq_flow_sequence</field>
      <!-- 前綴固定爲 -->
      <field name="prefix">RV-</field>
      <!-- 序列號位數（6位，即000001） -->
      <field name="padding">6</field>
      <field name="company_id" eval="False" /> <!-- 跨公司通用 -->
      <!-- standard允許斷號，no_gap確保連續（性能開銷較大） -->
      <field name="implementation">standard</field> <!-- 允許斷號 -->
    </record>
  </data>
</odoo>