<odoo>
  <record id="document_state_model_action" model="ir.actions.act_window">
    <field name="name">文件狀態</field>
    <field name="res_model">document.state</field>
    <field name="view_mode">list,form</field>
  </record>
  <!-- 列表視圖 -->
  <record id="document_state_list" model="ir.ui.view">
    <field name="name">document.state.list</field>
    <field name="model">document.state</field>
    <field name="arch" type="xml">
      <list string="文件狀態列表">
        <field name="name" />
        <field name="description" />
        <field name="folded" />
        <field name="sequence" widget="handle" />
      </list>
    </field>
  </record>
  <!-- 表單視圖 -->
  <record id="document_state_form" model="ir.ui.view">
    <field name="name">document.state.form</field>
    <field name="model">document.state</field>
    <field name="arch" type="xml">
      <form string="文件狀態">
        <sheet>
          <group>
            <field name="name" />
            <field name="description" />
            <field name="folded" />
            <field name="sequence"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>