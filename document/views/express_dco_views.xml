<odoo>
  <record id="express_dco_model_action" model="ir.actions.act_window">
    <field name="name">文件管理</field>
    <field name="res_model">express.dco</field>
    <field name="view_mode">list,form,kanban</field>
  </record>
  <!-- 列表視圖：顯示關鍵字段，支持排序和篩選 -->
  <record id="express_dco_list" model="ir.ui.view">
    <field name="name">express.dco.list</field>
    <field name="model">express.dco</field>
    <field name="arch" type="xml">
      <list string="圖/文 送審單">
        <field name="item_number" />
        <field name="description" />
        <field name="state" />
        <field name="owner_id" />
      </list>
    </field>
  </record>
  <!-- 表單視圖：結構化布局，支持數據錄入與詳情展示 -->
  <record id="express_dco_form" model="ir.ui.view">
    <field name="name">express.dco.form</field>
    <field name="model">express.dco</field>
    <field name="arch" type="xml">
      <form string="圖/文 送審單">
        <header>
          <field name="state" widget="statusbar" />
          <button name="setversionflog" string="審核" type="object" invisible="1" />
        </header>
        <sheet>
          <group col="3">
            <group col="3">
              <field name="item_number" />
              <field name="subject" />
              <field name="reason" />
              <field name="description" />
              <field name="category" />
              <field name="is_project" />
              <!-- <field name="versionflog" /> -->
            </group>
            <group col="3">
              <field name="owner_id" />
              <field name="manager_id" />
              <field name="priority" />
              <field name="release_date" />
              <field name="team_id" />
              <field name="cad_reviewer_id" />
              <field name="cad_reviewer2_id" />
            </group>
          </group>
          <notebook>
            <page string="附件">
              <group>
                <field name="attachment_ids" widget="many2many_binary" />
              </group>
            </page>
            <page string="送審文件" invisible="category in ['CAD']">
              <field name="document_ids" options="{'no_create': True}" />
            </page>
            <page string="送審圖紙" invisible="category in ['Document']">
              <field name="cad_ids" options="{'no_create': True}" />
            </page>
          </notebook>
        </sheet>
        <chatter reload_on_post="True"/>
      </form>
    </field>
  </record>
  <!-- 看板視圖 -->
  <record id="express_dco_kanban" model="ir.ui.view">
    <field name="name">express.dco.kanban</field>
    <field name="model">express.dco</field>
    <field name="arch" type="xml">
      <kanban string="圖/文 送審單" default_group_by="state" records_draggable="1">
        <field name="item_number" />
        <field name="description" />
        <field name="state" />
        <field name="owner_id" />
        <templates>
          <t t-name="card">
            <div class="o_kanban_details">
              <strong>
                <field name="item_number" />
              </strong>
              <div class="oe_kanban_footer">
                <div class="oe_kanban_footer_left">
                  <field name="state" widget="statusbar" options="{'clickable': '1'}" />
                </div>
                <div class="oe_kanban_footer_right">
                  <field name="owner_id" />
                </div>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
</odoo>