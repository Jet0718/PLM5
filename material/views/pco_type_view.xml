<?xml version="1.0"?>
<odoo>

    <record id="pco_type_model_action" model="ir.actions.act_window">
        <field name="name">變更申請單-類型</field>
        <field name="res_model">pco.type</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="pco_type_view_tree" model="ir.ui.view">
        <field name="name">pco.type.list</field>
        <field name="model">pco.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="類型"/>                          
            </list>
        </field>
    </record>
    <record id="pco_type_view_form" model="ir.ui.view">
        <field name="name">pco.type.form"</field>
        <field name="model">pco.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="類型"/>
                    </group>
                </sheet>                
            </form>
        </field>
    </record>
    <record id="pco_type_view_search" model="ir.ui.view">
        <field name="name">pco.type.search"</field>
        <field name="model">pco.type</field>
        <field name="arch" type="xml">
            <search>                
                <field name="name" string="類型"/>                 
            </search>
        </field>
    </record>
</odoo>
