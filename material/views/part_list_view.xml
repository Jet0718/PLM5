<?xml version="1.0"?>
<odoo>

    <record id="partlist_model_action" model="ir.actions.act_window">
        <field name="name">物料分類清單選項</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">part.list</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="partlist_view_list" model="ir.ui.view">
        <field name="name">part.list.list</field>
        <field name="model">part.list</field>
        <field name="arch" type="xml">
            <list string="物料分類清單選項">
                <field name="classification" string="分類" optional="show"/>
                <field name="name" string="名稱" optional="show"/>
                <field name="label" string="標籤" optional="show"/>
                <field name="value" string="值" optional="show"/>
            </list>
        </field>
    </record> 
    <record id="partlist_view_form" model="ir.ui.view">
        <field name="name">part.list.form</field>
        <field name="model">part.list</field>
        <field name="arch" type="xml">
            <form string="物料分類清單選項">
                <sheet>    
                    <group>
                        <group>
                            <field name="classification"  string="分類"/>
                            <field name="name"  string="名稱"/>
                            <field name="label"  string="標籤"/>
                            <field name="value"  string="值"/>
                        </group>                  
                    </group>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail.activity"/>
                    <field name="message_ids" widget="mail.thread"/>
                </div> -->
                <chatter reload_on_post="True"/>
            </form>
        </field>
    </record>
    <record id="partlist_view_search" model="ir.ui.view">
        <field name="name">part.list.search</field>
        <field name="model">part.list</field>
        <field name="arch" type="xml">
            <search string="物料分類清單選項">
                <field name="classification"  string="分類"/>
                <field name="name"  string="名稱"/>
                <field name="label"  string="標籤"/>
                <field name="value"  string="值"/>
            </search>
        </field>
    </record>
</odoo>
