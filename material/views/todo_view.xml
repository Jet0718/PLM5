<?xml version="1.0"?>
<odoo>
    <!-- 動作定義 -->
    <record id="material_todo_action" model="ir.actions.act_window">
        <field name="name">待辦事項</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">material.todo</field>
        <field name="view_mode">list,form,kanban,calendar,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                目前沒有待辦事項。
            </p>
            <p>
                待辦事項用於追蹤簽核流程中的任務，您可以從簽核記錄自動建立或手動建立。
            </p>
        </field>
    </record>

    <!-- 樹狀視圖 -->
    <record id="material_todo_view_list" model="ir.ui.view">
        <field name="name">material.todo.list</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <list string="待辦事項">
                <field name="sequence" widget="handle"/>
                <field name="name" string="名稱"/>
                <field name="record_link" string="關聯表單" widget="html"/>
                <field name="record_name" string="表單名稱"/>
                <field name="user_id" string="待辦人員"/>
                <field name="state" string="狀態" widget="badge"/>
                <field name="priority" string="優先級" widget="priority"/>
                <field name="date_create" string="建立時間"/>
                <field name="date_done" string="完成時間"/>
            </list>
        </field>
    </record>

    <!-- 表單視圖 -->
    <record id="material_todo_view_form" model="ir.ui.view">
        <field name="name">material.todo.form</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <form string="待辦事項">
                <header>
                    <button name="action_start" string="開始" type="object" class="btn-primary" invisible="state != 'pending'"/>
                    <button name="action_done" string="完成" type="object" class="btn-success" invisible="state not in ['pending', 'in_progress']"/>
                    <button name="action_cancel" string="取消" type="object" class="btn-secondary" invisible="state not in ['pending', 'in_progress']"/>
                    <button name="action_reopen" string="重新開啟" type="object" class="btn-warning" invisible="state not in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,in_progress,done,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_start" type="object" class="oe_stat_button" icon="fa-play" help="開始處理" invisible="state != 'pending'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">開始</span>
                            </div>
                        </button>
                        <button name="action_done" type="object" class="oe_stat_button" icon="fa-check" help="標記為完成" invisible="state not in ['pending', 'in_progress']">
                            <div class="o_stat_info">
                                <span class="o_stat_text">完成</span>
                            </div>
                        </button>
                        <button name="action_cancel" type="object" class="oe_stat_button" icon="fa-times" help="取消待辦" invisible="state not in ['pending', 'in_progress']">
                            <div class="o_stat_info">
                                <span class="o_stat_text">取消</span>
                            </div>
                        </button>
                        <button name="action_reopen" type="object" class="oe_stat_button" icon="fa-refresh" help="重新開啟" invisible="state not in ['done', 'cancelled']">
                            <div class="o_stat_info">
                                <span class="o_stat_text">重新開啟</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="待辦事項名稱"/>
                        </h1>
                        <div class="o_priority">
                            <field name="priority" widget="priority"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" string="待辦人員"/>
                            <field name="state" string="狀態"/>
                            <field name="sequence" string="序號"/>
                            <field name="date_create" string="建立時間"/>
                            <field name="date_start" string="開始時間"/>
                            <field name="date_done" string="完成時間"/>
                        </group>
                        <group>
                            <field name="record_link" string="關聯表單" widget="html" readonly="1"/>
                            <field name="record_name" string="表單名稱" readonly="1"/>
                            <field name="model_name" string="模型名稱" readonly="1"/>
                            <field name="res_id" string="表單ID" readonly="1"/>
                            <field name="review_id" string="簽核記錄"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="詳細資訊">
                            <field name="description" string="描述" nolabel="1"/>
                        </page>
                        <page string="活動記錄">
                            <field name="activity_ids" widget="activity" nolabel="1"/>
                        </page>
                        <page string="討論">
                            <field name="message_ids" widget="mail_thread" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 搜尋視圖 -->
    <record id="material_todo_view_search" model="ir.ui.view">
        <field name="name">material.todo.search</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <search string="搜尋待辦事項">
                <field name="name" string="名稱"/>
                <field name="user_id" string="待辦人員"/>
                <field name="state" string="狀態"/>
                <field name="priority" string="優先級"/>
                <field name="record_name" string="關聯表單"/>
                <field name="model_name" string="模型名稱"/>
                <field name="review_id" string="簽核記錄"/>
                <filter string="我的待辦" name="my_todos" domain="[('user_id', '=', uid)]"/>
                <filter string="待處理" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="進行中" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="已完成" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <!-- 簡化日期過濾器，使用context_today() -->
                <filter string="今日建立" name="today" domain="[('date_create', '>=', context_today())]"/>
                <filter string="高優先級" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <separator/>
                <filter string="依狀態" name="group_by_state" context="{'group_by': 'state'}"/>
                <filter string="依人員" name="group_by_user" context="{'group_by': 'user_id'}"/>
                <filter string="依優先級" name="group_by_priority" context="{'group_by': 'priority'}"/>
            </search>
        </field>
    </record>

    <!-- 看板視圖 -->
    <record id="material_todo_view_kanban" model="ir.ui.view">
        <field name="name">material.todo.kanban</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="record_link"/>
                <field name="record_name"/>
                <field name="date_create"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                </div>
                                <div class="o_kanban_record_priority">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <field name="record_link"/>
                                </div>
                                <div>
                                    <field name="record_name"/>
                                </div>
                                <div>
                                    <field name="user_id"/>
                                </div>
                                <div>
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div>
                                    <field name="date_create"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 行事曆視圖 -->
    <record id="material_todo_view_calendar" model="ir.ui.view">
        <field name="name">material.todo.calendar</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <calendar string="待辦事項行事曆" date_start="date_create" date_stop="date_done" color="user_id">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="priority"/>
            </calendar>
        </field>
    </record>

    <!-- 樞紐分析視圖 -->
    <record id="material_todo_view_pivot" model="ir.ui.view">
        <field name="name">material.todo.pivot</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <pivot string="待辦事項分析">
                <field name="user_id" type="row"/>
                <field name="state" type="col"/>
                <field name="priority" type="col"/>
                <field name="model_name" type="row"/>
                <field name="id" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- 圖表視圖 -->
    <record id="material_todo_view_graph" model="ir.ui.view">
        <field name="name">material.todo.graph</field>
        <field name="model">material.todo</field>
        <field name="arch" type="xml">
            <graph string="待辦事項統計">
                <field name="user_id" type="row"/>
                <field name="state" type="col"/>
                <field name="priority" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- 伺服器動作：從簽核記錄建立待辦事項 -->
    <record id="material_todo_create_from_review_action" model="ir.actions.server">
        <field name="name">從簽核記錄建立待辦事項</field>
        <field name="model_id" ref="base_tier_validation.model_tier_review"/>
        <field name="state">code</field>
        <field name="code">
if records:
    todo_model = env['material.todo']
    for review in records:
        todo_model.create_from_review(review)
</field>
    </record>

    <!-- 上下文選單動作 -->
    <record id="material_todo_action_from_review" model="ir.actions.act_window">
        <field name="name">建立待辦事項</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">material.todo</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_review_id': active_id}</field>
    </record>

    <!--
    NOTE: 在 tier.review 表單中添加按鈕的記錄已被註釋掉，
    因為 base_tier_validation.tier_review_view_form 視圖在 Odoo 19 中不存在。
    tier.review 模型只有樹狀視圖，沒有表單視圖。
    
    原始代碼：
    <record id="tier_review_form_inherit_material_todo" model="ir.ui.view">
        <field name="name">tier.review.form.inherit.material.todo</field>
        <field name="model">tier.review</field>
        <field name="inherit_id" ref="base_tier_validation.tier_review_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button type="action" action="%(material_todo_action_from_review)d" class="oe_stat_button" icon="fa-tasks">
                        <div class="o_stat_info">
                            <span class="o_stat_text">建立待辦</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
    -->
<menuitem id="menu_TODO_summary"   name="TODO Summary"  parent="mrp_plm.menu_mrp_plm_root" sequence="850"/>
    <menuitem id="todolist_menu_action" name="Todo list"  parent="menu_TODO_summary" action="material_todo_action" sequence="1"/>
</odoo>