<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit.document.tabs</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description_page']" position="after">
                <page string="ENG Documents" name="engineering_documents">
                    <field name="document_ids"/>
                </page>
                <page string="Documents" name="official_documents">
                    <field name="documents_document_ids">
                        <list>
                            <field name="name"/>
                            <button name="access_content" type="object" string="預覽" class="btn-link" icon="fa-eye"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>