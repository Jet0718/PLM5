<?xml version="1.0"?>
<odoo>

    <record id="classtemplate_model_action" model="ir.actions.act_window">
        <field name="name">物料分類模板</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">class.template</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="classtemplate_view_list" model="ir.ui.view">
        <field name="name">class.template.list</field>
        <field name="model">class.template</field>
        <field name="arch" type="xml">
            <list string="物料分類模板">
                <field name="classification"  string="分類" optional="show"/>
                <field name="name"  string="名稱" optional="show"/>
            </list>
        </field>
    </record> 
    <record id="classtemplate_view_form" model="ir.ui.view">
        <field name="name">class.template.form</field>
        <field name="model">class.template</field>
        <field name="arch" type="xml">
            <form string="物料分類模板">
                <sheet>    
                    <group>
                        <group>
                            <field name="classification"  string="分類"/>
                            <field name="name"  string="名稱"/>
                        </group>                  
                    </group>
                </sheet>
                <chatter reload_on_post="True"/>
            </form>
        </field>
    </record>
    <record id="classtemplate_view_search" model="ir.ui.view">
        <field name="name">class.template.search</field>
        <field name="model">class.template</field>
        <field name="arch" type="xml">
            <search string="物料分類模板">
                <field name="classification"  string="分類"/>
                <field name="name"  string="名稱"/>
            </search>
        </field>
    </record>
</odoo>
