                <sheet>
                    <field name="cn_controlid" invisible="1"/>
                    <field name="res_type" invisible="1"/>
                    <field name="sequence" invisible="1"/>
                    <field name="selected_records" widget="many2many_tags" 
                           domain="[('model', '=', res_type),('sequence','&gt;',sequence)]"
                    />

                    <!-- 嵌入 Tree View -->
                    <!-- <notebook >
