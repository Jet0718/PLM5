            </form>
        </field>
    </record>

    <record id="tier_definition_viewlistlist" model="ir.ui.view">
        <field name="name">cn.tempselect.list</field>
        <field name="model">cn.tempselect</field>
        <field name="arch" type="xml">
            <list>
                <field name="selected_records" />
            </list>
        </field>
    </record>
    <record id="templist_model_action" model="ir.actions.act_window">
        <field name="name">送审列表</field>
        <field name="res_model">cn.tempselect</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="templatelist_menu_root" name="送审列表"  action="templist_model_action" parent="base_tier_validation.menu_tier_confirmation"   sequence="92"/>
    
